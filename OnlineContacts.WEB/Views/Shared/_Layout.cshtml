@using OnlineContacts.shared.Resources
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>

<head>

    


    <meta charset="utf-8" />
    <title>@ViewBag.Title - @OnlineContactsResources.ApplicationName</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link rel="shortcut icon" href="~/Content/img/hnet.com-image.ico" />

    @Styles.Render("~/Content/css")
    <link href="~/Content/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-fileinput.css" rel="stylesheet" />
    <script src="~/Content/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/js/js.cookie.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/Content/js/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <script src="~/Content/js/moment.min.js" type="text/javascript"></script>
    <script src="~/Content/js/daterangepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/js/clockface.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap-select.min.js"></script>
    <script src="~/Content/js/app.min.js" type="text/javascript"></script>
    <script src="~/Content/js/components-date-time-pickers.min.js" type="text/javascript"></script>
    <script src="~/Content/js/layout.min.js" type="text/javascript"></script>
    <script src="~/Content/js/demo.min.js" type="text/javascript"></script>
    <script src="~/Content/js/quick-sidebar.min.js" type="text/javascript"></script>
    @*<script src="~/Content/js/form-input-mask.min.js"></script>*@
    <script src="~/Content/js/jquery.inputmask.bundle.min.js"></script>
    <script src="~/Content/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/Content/js/bootstrap-fileinput.js"></script>

    <script src="~/Scripts/kendo/2014.3.1119/cultures/kendo.culture.en-IE.min.js"></script>
    <script src="~/Scripts/kendo/2014.3.1119/cultures/kendo.culture.en-GB.min.js"></script>
    @Styles.Render("~/Content/kendo/2014.3.1119/css")
    @Scripts.Render("~/bundles/kendo")


    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
   
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>



<body dir="@OnlineContactsResources.dir.ToString()">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink($"{@OnlineContactsResources.ApplicationName}", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                   
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink($"{@OnlineContactsResources.Contacts}", "index", "Contacts")</li>
                    }

                    <li>
                        <a href="javascript:switchLang();">
                            <i class="fas fa-ban">@OnlineContactsResources.Lang</i>
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @OnlineContactsResources.ApplicationName</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
    <script>

     function switchLang() {
         debugger;
         var clu = '@(OnlineContactsResources.Lang.ToLower() == "english"? "en": "ar")';
            $.ajax({
                url: '@Url.Action("SetCulture","Home")',
                data: { culture: clu },
                success: function (result) {
                    location.reload();
                }
            });
    }
    </script>

</body>
</html>
